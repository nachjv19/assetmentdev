<!DOCTYPE html>
<html>
<head>
  <title>Total Pagado por Cliente</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Total Pagado por Cliente</h1>
  <table border="1">
    <thead>
      <tr>
        <th>Cliente</th>
        <th>Total Pagado</th>
      </tr>
    </thead>
    <tbody id="tabla-clientes">
      <!-- Aquí se llenará con JS -->
    </tbody>
  </table>

  <script>
    fetch("/api/consultas/total-pagado-clientes")
      .then(res => res.json())
      .then(data => {
        const tbody = document.getElementById("tabla-clientes");
        data.forEach(c => {
          const tr = document.createElement("tr");
          tr.innerHTML = `<td>${c.nombre}</td><td>${c.total_pagado}</td>`;
          tbody.appendChild(tr);
        });
      });
  </script>
</body>
</html>
